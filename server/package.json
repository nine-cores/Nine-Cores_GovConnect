{
  "name": "test-api",
  "version": "1.0.0",
  "description": "A Node.js API project",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node index.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "typeorm": "npx tsx -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:generate": "npm run typeorm migration:generate -- -d ./src/database/index.ts src/database/migrations/new",
    "migrate": "npm run typeorm migration:run -- -d ./src/database/index.ts",
    "migrate:all": "npm run typeorm migration:run -- -d ./src/database/index.ts",
    "migrate:revert": "npm run typeorm migration:revert -- -d ./src/database/index.ts",
    "migrate:show": "npm run typeorm migration:show -- -d ./src/database/index.ts",
    "migrate:create": "npm run typeorm migration:create -- -d ./src/database/index.ts",
    "migrate:manage": "npx tsx -r tsconfig-paths/register ./src/database/scripts/manage-migrations.ts",
    "build:migrate": "npm run typeorm migration:run -- -d ./dist/src/database/index.js",
    "seed": "npm run typeorm migration:run -- -d ./src/database/seeders/index.ts",
    "seed:run": "npx tsx -r tsconfig-paths/register ./src/database/seeders/run.ts",
    "build:seed": "npm run typeorm migration:run -- -d ./dist/src/database/seeders/index.js",
    "dummy": "npm run typeorm migration:run -- -d ./src/database/dummy/index.ts",
    "db:clear": "npx tsx -r tsconfig-paths/register ./src/database/scripts/clear-database.ts",
    "db:clear-data": "npx tsx -r tsconfig-paths/register ./src/database/scripts/clear-data.ts",
    "db:manage": "npx tsx -r tsconfig-paths/register ./src/database/scripts/manage-database.ts",
    "db:reset": "npm run db:manage -- --clear --migrate --seed",
    "db:fresh": "npm run db:clear && npm run migrate && npm run seed:run",
    "db:soft-fresh": "npm run db:clear-data && npm run migrate && npm run seed:run",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\""
  },
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pino": "^9.8.0",
    "pino-pretty": "^13.1.1",
    "qrcode": "^1.5.4",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.25",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.0",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "faker": "^6.6.6",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  }
}